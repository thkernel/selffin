<%= form_with(model: bank, local: false) do |form| %>
  <div class="modal-body">
    <ul class="errors">
    </ul>

    <div class="row">
      <div class="col-md-6">
        <div class="form-group">
          <%= form.label :account_type, "Type compte", class: "required" %>
          <%= form.select :account_type, BANK_ACCOUNT_TYPES, {prompt: "Sélectionner"}, class: "form-control", placeholder: "Nom", required: true %>
        </div>
      </div>

      <div class="col-md-6">
        <div class="form-group">
          <%= form.label :name, "Nom", class: "required" %>
          <%= form.text_field :name, class: "form-control", placeholder: "Nom", required: true %>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-md-6">
        <div class="form-group">
          <%= form.label :account_number, "N°Compte", class: "required" %>
          <%= form.text_field :account_number, class: "form-control", placeholder: "N°Compte", required: true %>
        </div>
      </div>

      <div class="col-md-6">
        <div class="form-group">
          <%= form.label :balance, "Solde" %>
          <%= form.number_field :balance, class: "form-control" %>
        </div>
      </div>
    </div>

    </div><!-- modal body -->
    <div class="modal-footer">
      <%= link_to "Annuler", "#", class: "btn btn-secondary tx-mont tx-medium tx-11 tx-uppercase pd-y-12 pd-x-25 tx-spacing-1", data: {dismiss: "modal"} %>
      <%= form.submit  class: "btn btn-primary tx-mont tx-medium tx-11 tx-uppercase pd-y-12 pd-x-25 tx-spacing-1",  "data-loading-text"=>"Loading...", autocomplete: "off" %>
    </div>

  
<% end %>
