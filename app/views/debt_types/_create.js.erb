$("ul.errors").html("");
<% if @debt_type.errors.any? %>
  <% @debt_type.errors.full_messages.each do |message| %>
 
    $("ul.errors").append($('<div class="c-alert c-alert--danger" > ').html("<%= message.html_safe %> "));
  <% end %>
<% else %>
  $(".debt-types").html("<%= escape_javascript(render 'index') %>");
  $("#debt-type-modal").modal("hide");
 
<% end %>