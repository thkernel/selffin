<p id="notice"><%= notice %></p>

<h1>Lends</h1>

<table>
  <thead>
    <tr>
      <th>Uid</th>
      <th>Designation</th>
      <th>Lend date</th>
      <th>Recipient</th>
      <th>Description</th>
      <th>Amount</th>
      <th>Repayment date</th>
      <th>Status</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @lends.each do |lend| %>
      <tr>
        <td><%= lend.uid %></td>
        <td><%= lend.designation %></td>
        <td><%= lend.lend_date %></td>
        <td><%= lend.recipient %></td>
        <td><%= lend.description %></td>
        <td><%= lend.amount %></td>
        <td><%= lend.repayment_date %></td>
        <td><%= lend.status %></td>
        <td><%= lend.user %></td>
        <td><%= link_to 'Show', lend %></td>
        <td><%= link_to 'Edit', edit_lend_path(lend) %></td>
        <td><%= link_to 'Destroy', lend, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

