<p id="notice"><%= notice %></p>

<h1>Loans</h1>

<table>
  <thead>
    <tr>
      <th>Uid</th>
      <th>Designation</th>
      <th>Loan date</th>
      <th>Source</th>
      <th>Description</th>
      <th>Amount</th>
      <th>Repayment date</th>
      <th>Status</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @loans.each do |loan| %>
      <tr>
        <td><%= loan.uid %></td>
        <td><%= loan.designation %></td>
        <td><%= loan.loan_date %></td>
        <td><%= loan.source %></td>
        <td><%= loan.description %></td>
        <td><%= loan.amount %></td>
        <td><%= loan.repayment_date %></td>
        <td><%= loan.status %></td>
        <td><%= loan.user %></td>
        <td><%= link_to 'Show', loan %></td>
        <td><%= link_to 'Edit', edit_loan_path(loan) %></td>
        <td><%= link_to 'Destroy', loan, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

