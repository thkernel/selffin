<p id="notice"><%= notice %></p>

<h1>Savings</h1>

<table>
  <thead>
    <tr>
      <th>Uid</th>
      <th>Designation</th>
      <th>Bank</th>
      <th>Description</th>
      <th>Amount</th>
      <th>Status</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @savings.each do |saving| %>
      <tr>
        <td><%= saving.uid %></td>
        <td><%= saving.designation %></td>
        <td><%= saving.bank %></td>
        <td><%= saving.description %></td>
        <td><%= saving.amount %></td>
        <td><%= saving.status %></td>
        <td><%= saving.user %></td>
        <td><%= link_to 'Show', saving %></td>
        <td><%= link_to 'Edit', edit_saving_path(saving) %></td>
        <td><%= link_to 'Destroy', saving, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

